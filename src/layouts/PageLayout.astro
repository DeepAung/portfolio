---
import Welcome from "../components/Welcome.astro";
import Modal from "../components/Modal.astro";
import Navbar from "../components/Navbar.astro";
import Loader from "../components/Loader.astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="My Portfolio for applying to the university."
    />
    <title>Ashira Aungsumal's Portfolio for applying to the university.</title>
    <script
      src="https://kit.fontawesome.com/8e504b9924.js"
      crossorigin="anonymous"
      defer></script>
  </head>
  <body>
    <Loader />
    <Navbar />
    <Modal />
    <Welcome />

    <div id="contents">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap");
  @import url("https://fonts.googleapis.com/css2?family=IBM+Plex+Sans+Thai:wght@100;200;300;400;500;600;700&display=swap");
  @import url("https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;400;500;600;700&display=swap");

  @font-face {
    font-family: "HorizonFont";
    src: url("/portfolio/fonts/Horizon/horizon.otf");
    font-display: swap;
  }

  /* -------------------- default settings -------------------- */

  :root {
    --dark: 33, 33, 33;
    --blue: 56, 182, 255;
    --yellow: 255, 223, 43;
    --green: 27, 248, 129;
    --primary: 255, 255, 255;
    --crimson: 121, 14, 14;
    --grey: 218, 215, 197;
  }

  h1 {
    font-size: clamp(2rem, 8vw, 4rem);
  }

  h3 {
    font-size: clamp(1.5rem, 4vw, 2rem);
  }

  a {
    color: white;
  }

  p,
  a,
  li {
    font-size: clamp(1rem, 1.2vw, 1.2rem);
  }
  *,
  *::before,
  *::after {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    position: relative;
  }

  body {
    font-weight: normal;
    font-family: Inter, "IBM Plex Sans Thai", sans-serif;
    color: white;
    overflow-x: hidden;
  }

  /* -------------------- for this component -------------------- */

  #contents {
    background-color: rgb(var(--dark));
    overflow-x: hidden;
  }

  /* -------------------- utility class -------------------- */
  .blue {
    color: rgb(var(--blue));
  }

  .yellow {
    color: rgb(var(--yellow));
  }

  .green {
    color: rgb(var(--green));
  }

  .primary {
    color: rgb(var(--primary));
  }

  .crimson {
    color: rgb(var(--crimson));
  }

  .grey {
    color: rgb(var(--grey));
  }

  .bold {
    font-weight: 600;
  }

  .underline {
    text-decoration: underline;
  }
</style>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import { primaryColor } from "../scripts/university.ts";

  gsap.registerPlugin(ScrollTrigger);

  var root = document.querySelector(":root") as HTMLElement;

  root.style.setProperty("--primary", primaryColor);
  window.addEventListener("universitychange", () => {
    root.style.setProperty("--primary", primaryColor);
  });
</script>
