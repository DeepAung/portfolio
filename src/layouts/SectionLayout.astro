---
interface Props {
  englishTitle: string;
  thaiTitle: string;
}

const { englishTitle, thaiTitle } = Astro.props;
---

<div class="container">
  <div class="head">
    <h1><span>{englishTitle}</span></h1>
    <h3><span>{thaiTitle}</span></h3>
  </div>
  <slot />
</div>

<style>
  .container {
    padding: 4rem min(4rem, 6vw);
  }
  .head {
    text-align: center;
    margin-inline: auto;
    margin-bottom: 3rem;

    background-color: rgba(var(--secondary), 0.7);
    border-radius: 1rem;
    padding: 1rem 0;
    max-width: 40rem;
  }

  .head h1,
  .head h3 {
    overflow: hidden;
  }

  .head span {
    display: block;
  }
</style>

<script>
  import gsap from "gsap";
  import { gsapTrigger } from "../scripts/gsapTrigger";

  const containers: object[] = gsap.utils.toArray(".container");
  const heads: object[] = gsap.utils.toArray(".head");

  containers.forEach((containerObj) => {
    let container = containerObj as Element;

    gsapTrigger.from(container, container, {
      opacity: 0,
      x: -500,
      ease: "power4",
      duration: 1.5,
    });
  });

  heads.forEach((headObj) => {
    let head = headObj as Element;

    gsapTrigger.from(
      [head.children[0].children, head.children[1].children],
      head,
      {
        yPercent: 100,
        stagger: 0.2,
        delay: 0.7,
        ease: "power4",
        duration: 1,
      },
    );
  });
</script>
