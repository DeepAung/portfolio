---
import Welcome from "../components/Welcome.astro";
import Intro from "../components/Intro.astro";
import Profile from "../components/Profile.astro";
import Education from "../components/Education.astro";
import Certificates from "../components/Certificates.astro";
import Projects from "../components/Projects.astro";
import Activities from "../components/Activities.astro";
import Layout from "../layouts/Layout.astro";
import Modal from "../components/Modal.astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="My Portfolio for applying to the university."
    />
    <title>Ashira Aungsumal's Portfolio for applying to the university.</title>
    <script
      src="https://kit.fontawesome.com/8e504b9924.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <Modal />

    <Welcome />

    <div class="detail">
      <Intro />

      <Layout title1="Profile" title2="ประวัติส่วนตัว">
        <Profile />
      </Layout>

      <Layout title1="Education" title2="ประวัติการศึกษา">
        <Education />
      </Layout>

      <Layout title1="Certificates" title2="ผลงานด้านวิชาการ">
        <Certificates />
      </Layout>

      <Layout title1="Projects" title2="โปรเจกต์">
        <Projects />
      </Layout>

      <Layout title1="Activities" title2="กิจกรรม">
        <Activities />
      </Layout>
    </div>
  </body>
</html>

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap");
  @import url("https://fonts.googleapis.com/css2?family=IBM+Plex+Sans+Thai:wght@100;200;300;400;500;600;700&display=swap");
  @import url("https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;400;500;600;700&display=swap");

  @font-face {
    font-family: "Horizon";
    src: url(/fonts/Horizon/horizon.otf);
  }

  /* -------------------- default settings -------------------- */

  :root {
    --blue: 56, 182, 255;
    --yellow: 255, 223, 43;
    --green: 27, 248, 129;
    --pink: 250, 24, 163;
    --crimson: 121, 14, 14;
    --grey: 218, 215, 197;
  }

  h1 {
    font-size: clamp(2rem, 8vw, 4rem);
  }

  h3 {
    font-size: clamp(1.5rem, 4vw, 2rem);
  }

  a {
    color: white;
  }

  p,
  a,
  li {
    font-size: clamp(1rem, 1.2vw, 1.2rem);
  }
  *,
  *::before,
  *::after {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    position: relative;
  }

  body {
    font-weight: normal;
    font-family: Inter, "IBM Plex Sans Thai", sans-serif;
    color: white;
    overflow-x: hidden;
  }

  /* -------------------- for this component -------------------- */

  .detail {
    background-color: rgb(30, 30, 30);
    overflow-x: hidden;
  }

  /* -------------------- utility class -------------------- */
  .blue {
    color: rgb(var(--blue));
  }

  .yellow {
    color: rgb(var(--yellow));
  }

  .green {
    color: rgb(var(--green));
  }

  .pink {
    color: rgb(var(--pink));
  }

  .crimson {
    color: rgb(var(--crimson));
  }

  .grey {
    color: rgb(var(--grey));
  }

  .bold {
    font-weight: 600;
  }

  .underline {
    text-decoration: underline;
  }
</style>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  // -------------------------------------- //

  const heads: object[] = gsap.utils.toArray(".head");

  heads.forEach((headObj) => {
    let head = headObj as Element;

    gsap.from([head.children[0].children, head.children[1].children], {
      scrollTrigger: {
        trigger: head,
        toggleActions: "play none resume reset",
      },
      yPercent: 100,
      stagger: 0.2,
      delay: 0.25,
      ease: "power4",
      duration: 1,
    });
  });
</script>
