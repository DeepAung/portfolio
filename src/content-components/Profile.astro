<style>
  .profile-pic {
    display: block;
    border-radius: 50%;
    width: min(100%, 40vh);
    margin: auto;
    margin-bottom: 2rem;
  }

  .selects {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    gap: 1rem;

    margin-bottom: 1rem;

    border-radius: 0.4rem;
    border: 2.5px solid rgba(var(--primary), 0.5);
    padding: 1rem 0.25rem;
    transition: border 0.25s ease-out;
  }

  .selects button {
    background-color: transparent;
    border: none;
    color: rgb(var(--primary));
    font-size: clamp(1.25rem, 3.5vw, 1.5rem);
    font-weight: 600;
    padding-bottom: 0.3rem;

    cursor: pointer;
  }

  .selects button::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 2.5px;

    transform: scaleX(0);
    background-color: rgb(var(--primary));

    transform-origin: bottom right;
    transition: transform 0.25s ease-out;
  }

  .selects button.active::after,
  .selects button:hover::after {
    transform: scaleX(1);
    transform-origin: bottom left;
  }

  .wrapper {
    max-width: max-content;
    margin: auto;
  }

  .wrapper span {
    color: #dad7c5;
    font-weight: 600;
  }

  .contacts {
    max-width: max-content;
    margin: auto;
  }

  .contacts > * {
    line-height: 3em;
    display: block;

    border-radius: 0.5rem;
    padding: 0.25rem;
    text-decoration: none;

    transition: 0.25s;
  }

  .contacts > *::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 2.5px;

    transform: scaleX(0);
    background-color: rgb(var(--primary));

    transform-origin: bottom right;
    transition: transform 0.25s ease-out;
  }

  .contacts *:hover::after {
    transform: scaleX(1);
    transform-origin: bottom left;
  }

  .contacts > * i {
    margin-right: 0.3em;
    transition: 0.25s;
  }

  .contacts > *:hover i {
    color: white;
    transform: translateY(-3px);
  }

  .skills {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
  }

  .skills a,
  .skills span {
    background-color: rgba(255, 255, 255, 0.7);
    padding: 0.5rem;
    border-radius: 0.25rem;

    font-size: clamp(1rem, 1.5vw, 2rem);
    font-weight: 600;
    color: rgba(0, 0, 0, 0.65);

    display: flex;
    align-items: center;
    gap: 0.75rem;

    text-align: center;
    cursor: pointer;
    transition: 0.25s;
  }

  .skills a:hover,
  .skills span:hover {
    background-color: rgba(255, 255, 255, 0.9);
    color: black;
    transform: translateY(-2px);
  }

  .skills span img {
    height: 2rem;
    user-select: none;
  }

  .skills .highlight {
    text-decoration: underline;
    text-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
  }
</style>

<script>
  import { gsapTrigger } from "../scripts/gsapTrigger";
  import { initTab } from "../scripts/tab";

  gsapTrigger.from(".profile", ".profile", {
    opacity: 0,
    duration: 1,
  });

  initTab(document.querySelector(".profile .tab") as Element, 0);
</script>
