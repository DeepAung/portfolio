<style>
  .container {
    padding: 2rem;
    background-color: rgb(30, 30, 30);
  }

  .head {
    text-align: center;
  }

  .wrapper {
    padding: 2rem 0;
    display: flex;
    align-items: center;
    justify-content: space-around;
  }

  .wrapper .profile-pic {
    display: block;
    width: 20rem;
    height: 20rem;
    border-radius: 100%;
    object-fit: cover;
  }

  section {
    padding: 2rem;
    border-radius: 1rem;
    background-color: rgba(121, 14, 14, 0.5);
  }

  .personal-info span {
    color: #dad7c5;
    font-weight: 600;
  }

  .contact-item {
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
    height: 2rem;
  }

  .contacts .contact-item img {
    width: 2rem;
    height: 2rem;
  }

  .contact-item :first-child {
    margin-right: 1rem;
  }

  .programming-skills {
    width: 80%;
    margin: auto;
  }

  .programming-skills h3 {
    text-align: center;
  }

  .skills-container {
    padding: 2rem;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(13rem, 1fr));
    gap: 2rem;
  }
</style>

<script>
  import gsap from "gsap";

  function fromScrollTrigger(target: string, body: any, time: number) {
    let value = -body?.y || 0;

    gsap.from(target, {
      scrollTrigger: {
        trigger: target,
        start: `top+=${value}px bottom`,
        toggleActions: "play none resume reset",
      },
      opacity: 0,
      duration: time,
      ...body,
    });
  }

  fromScrollTrigger(".head", { y: 200 }, 1);
  fromScrollTrigger(".personal-info", { x: -500 }, 2);
  fromScrollTrigger(".profile-pic", { x: 500 }, 0.75);
  fromScrollTrigger(".contacts", { x: -500 }, 2);
  fromScrollTrigger(".habits", { x: 500 }, 2);
  fromScrollTrigger(".programming-skills", { y: -100 }, 1);
</script>
