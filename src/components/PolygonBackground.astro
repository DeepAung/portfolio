---
import Particles from "astro-particles";
import type { ISourceOptions } from "tsparticles-engine";

const options: ISourceOptions = {
  fullScreen: {
    enable: false,
  },
  particles: {
    number: {
      value: 100,
      density: {
        enable: true,
        area: 1000,
      },
    },
    links: {
      distance: 150,
      enable: true,
    },
    move: {
      enable: true,
      random: true,
    },
    size: {
      value: 1,
    },
    opacity: {
      random: true,
    },
    shape: {
      type: "circle",
    },
  },
};
---

<Particles id="tsparticles" options={options} init="particlesInit" />

<style is:global>
  #tsparticles {
    position: fixed;
    inset: 0;
    z-index: -1;
  }

  canvas {
    position: fixed;
  }
</style>

<script>
  import type { Engine } from "tsparticles-engine";
  import { loadFull } from "tsparticles";
  import gsap from "gsap";
  import { animValue } from "../scripts/animationToggle";

  (window as any).particlesInit = async (engine: Engine) => {
    await loadFull(engine);
  };

  window.addEventListener("load", () => {
    checkAnimValue();
    gsap.from("#tsparticles", { opacity: 0, duration: 1 });
  });

  window.addEventListener("animationchanged", () => {
    checkAnimValue();
  });

  function checkAnimValue() {
    if (animValue) return;
    const tsparticles = document.querySelector("#tsparticles") as HTMLElement;
    tsparticles.style.display = "none";
  }
</script>
